<labwc_config>

  <core>
    <!-- pas de décoration par défaut — plein écran sans bordure -->
    <decoration>client</decoration>
    <gap>0</gap>
  </core>

  <theme>
    <titlebar>
      <showTitle>no</showTitle>
    </titlebar>
    <cornerRadius>0</cornerRadius>
  </theme>

  <keyboard>
    <default />
  </keyboard>

  <mouse>
    <default />
  </mouse>

  <windowRules>
    <!-- Tout : pas de décoration server, maximisé -->
    <windowRule identifier="*" serverDecoration="no">
      <action name="Maximize" />
    </windowRule>
  </windowRules>

</labwc_config>
